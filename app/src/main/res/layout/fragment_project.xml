<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_box"
            android:padding="20dp"
            android:textColor="@color/colorEditTextContent"
            android:textColorHint="@color/colorEditTextHint" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_box"
                android:padding="20dp"
                android:textColor="@color/colorEditTextContent"
                android:textColorHint="@color/colorEditTextHint" />

            <TextView
                android:id="@+id/act_student_cant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_box"
                android:padding="20dp"
                android:textColor="@color/colorEditTextContent"
                android:textColorHint="@color/colorEditTextHint" />
        </LinearLayout>

        <TextView
            android:id="@+id/act_description"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_box"
            android:padding="20dp"
            android:textColor="@color/colorEditTextContent"
            android:textColorHint="@color/colorEditTextHint" />

        <TextView
            android:id="@+id/act_schedule"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_box"
            android:padding="20dp"
            android:textColor="@color/colorEditTextContent"
            android:textColorHint="@color/colorEditTextHint" />

        <TextView
            android:id="@+id/act_requirements"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_box"
            android:padding="20dp"
            android:textColor="@color/colorEditTextContent"
            android:textColorHint="@color/colorEditTextHint" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/act_btn_left_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_cancel"
                android:textColor="@color/colorPrimaryDark"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/act_btn_right_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_publish"
                android:textColor="@color/colorPrimaryDark"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>