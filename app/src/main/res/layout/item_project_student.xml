<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:layout_gravity="end">

    <TextView
        android:id="@+id/project_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_students"
        android:textColor="@color/colorEditTextContent"
        android:textSize="@dimen/text_size_title_medium"
        />

    <ImageView
        android:id="@+id/project_student_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_delete_grey_24dp"
        android:contentDescription="@string/activity_delete_description"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>