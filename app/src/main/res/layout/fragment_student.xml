<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itba_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/itba_photo"
            android:contentDescription="@string/image_description_foto_itba" />
        <ImageView
            android:id="@+id/image_user"
            android:layout_width="88dp"
            android:layout_height="93dp"
            android:src="@drawable/ic_user"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/image_description_default_user"/>
        <TextView
            android:id="@+id/student_career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/itba_photo"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title_large"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/itba_photo"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title_large"
            android:textColor="@android:color/black"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/student_id_layout"
            android:layout_below="@id/itba_photo"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_gravity="end"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/student_id"
                android:textSize="@dimen/text_size_title_double_medium"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_id"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/text_size_title_double_medium"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/student_hours_layout"
            android:layout_below="@id/student_id_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_gravity="end"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/student_free_hours"
                android:textSize="@dimen/text_size_title_double_medium"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_hours"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/student_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/text_size_title_double_medium"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/career_progress_title"
            android:layout_below="@id/student_hours_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_gravity="end"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/text_size_title_double_medium"
                android:textColor="@android:color/white"
                android:text="@string/student_profile_career_progress"
                android:drawableStart="@drawable/ic_escalera"
                android:drawablePadding="10dp"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/career_progress_bar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:indeterminate="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/career_progress_title"
            android:layout_marginTop="40dp"
            android:progressDrawable="@drawable/career_circular_progress_bar"
            android:background="@drawable/career_progress_circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="45" />

        <TextView
            android:id="@+id/student_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title_large"
            android:layout_alignBottom="@id/career_progress_bar"
            android:layout_alignTop="@id/career_progress_bar"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/student_request_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/colorProfileContent"
            android:textSize="@dimen/text_size_large"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_below="@id/career_progress_bar"/>

        <LinearLayout
            android:layout_below="@id/student_request_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            style="?android:attr/buttonBarStyle">
            <Button
                android:id="@+id/student_btn_left_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_cancel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/student_btn_right_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/button_publish"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>