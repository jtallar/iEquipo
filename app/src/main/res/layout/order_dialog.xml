<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/black_gradient">

        <TextView
            android:id="@+id/close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:textSize="22sp"
            android:background="@null"
            android:textColor="@android:color/white"
            android:src="@drawable/ic_nodev_black_40dp"
            android:text="Sort by:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <Button
                android:id="@+id/nombre_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="Name"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/carrera_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="Career"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/porc_carrera_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="Career percentage"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/horas_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="Avaliable hours"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <!--</androidx.cardview.widget.CardView>-->